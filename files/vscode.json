{
    "cSpell.enableFiletypes": [
        "!markdown",
        "!plaintext"
    ],
    "cSpell.language": "en,pl",
    "cSpell.userWords": [
        "dejavu",
        "gopls",
        "ipynb",
        "jetbrains",
        "Menlo",
        "shellcheck",
        "tfvars",
        "tmpl"
    ],
    "editor.fontFamily": "'jetbrains mono'",
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "files.associations": {
        "*.tmpl": "jinja"
    },
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "gitlens.codeLens.enabled": false,
    "go.toolsManagement.autoUpdate": true,
    "markdown.extension.list.indentationSize": "inherit", // Use the configured tab size for list indentation
    "markdown.extension.orderedList.marker": "one", // Always use `1.` as ordered list marker
    "redhat.telemetry.enabled": false,
    "shellcheck.disableVersionCheck": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "[log]": {
        "editor.wordWrap": "on"
    },
    "[markdown]": {
        "editor.wordWrap": "on"
    },
    "[plaintext]":  {
        "editor.wordWrap": "on"
    }
}
