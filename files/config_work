# Hosts configuration for SSH

# Atom Jenkins
Host jenkins
    Hostname 10.100.0.129
    User ubuntu
    IdentityFile ~/.ssh/openstack

# Contrail + Kubernetes environment
Host contrail-kube
    Hostname 10.100.165
    User centos
    IdentityFile ~/.ssh/kube_aws_rsa
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Contrail + Openstack environment
Host contrail-os
    Hostname 10.100.0.172
    User centos
    IdentityFile ~/.ssh/kube_aws_rsa
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# Contrail + Openstack environment
Host contrail-os-ignacy
    Hostname 10.100.0.175
    User centos
    IdentityFile ~/.ssh/kube_aws_rsa
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
