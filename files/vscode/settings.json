{
  "[log]": {
    "editor.wordWrap": "on"
  },
  "[markdown]": {
    "editor.wordWrap": "on"
  },
  "[plaintext]": {
    "editor.wordWrap": "on"
  },
  "chat.agent.maxRequests": 500,
  "chat.editing.confirmEditRequestRemoval": false,
  "chat.tools.terminal.autoApprove": {
    "awk": true,
    "cat": true,
    "docker compose": true,
    "docker logs": true,
    "docker ps": true,
    "docker run": true,
    "docker-compose": true,
    "find": true,
    "git branch": true,
    "git diff": true,
    "git log": true,
    "git remote": true,
    "git rev-parse": true,
    "git show": true,
    "git status": true,
    "git tag": true,
    "go": true,
    "gofmt": true,
    "golangci-lint": true,
    "head": true,
    "jq": true,
    "ls": true,
    "make": true,
    "mkdir": true,
    "mv": true,
    "print": true,
    "rg": true,
    "sed": true,
    "tail": true,
    "timeout": true,
    "wc": true
  },
  "chat.tools.urls.autoApprove": {
    "https://github.com": {
      "approveRequest": false,
      "approveResponse": true
    }
  },
  "diffEditor.renderSideBySideInlineBreakpoint": 1400,
  "editor.fontFamily": "'JetBrains Mono'",
  "editor.minimap.enabled": false,
  "explorer.confirmDelete": false,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.blame.ignoreWhitespace": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "git.replaceTagsWhenPull": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Prefix with ticket number in brackets derived from git branch name (e.g. [CP-1234])"
    },
    {
      "text": "Prefix with service name in brackets derived from modified files (e.g. [service-name])"
    }
  ],
  "github.copilot.nextEditSuggestions.enabled": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.showWhatsNewAfterUpgrades": false,
  "go.toolsManagement.autoUpdate": true,
  "markdown.extension.list.indentationSize": "inherit",
  "markdownlint.config": {
    "blanks-around-lists": false,
    "code-block-style": false,
    "line-length": false,
    "no-bare-urls": false,
    "no-hard-tabs": false,
    "ul-indent": false,
    "ul-style": false
  },
  "peacock.favoriteColors": [
    {
      "name": "Burnt Orange",
      "value": "#4d1300"
    },
    {
      "name": "Green",
      "value": "#0c1f12"
    },
    {
      "name": "Violet",
      "value": "#02050a"
    },
    {
      "name": "Red",
      "value": "#470110"
    },
    {
      "name": "Blue",
      "value": "#001933"
    },
    {
      "name": "Olive",
      "value": "#110f00"
    }
  ],
  "protobuf.externalLinter.enabled": true,
  "protobuf.externalLinter.linter": "buf",
  "redhat.telemetry.enabled": false,
  "security.promptForLocalFileProtocolHandling": false,
  "shellcheck.disableVersionCheck": true,
  "window.commandCenter": true,
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.wrapTabs": true
}
