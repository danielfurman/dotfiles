{
    "chat.agent.maxRequests": 100,
    "chat.editing.confirmEditRequestRemoval": false,
    "chat.tools.terminal.autoApprove": {
        "awk": true,
        "git tag": true,
        "go": true,
        "gofmt": true,
        "golangci-lint": true,
        "make": true,
        "print": true,
        "sed": true,
        "true": true,
    },
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    "editor.fontFamily": "'jetbrains mono'",
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "diffEditor.renderSideBySideInlineBreakpoint": 1400,
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "always",
    // "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "text": "Prefix with ticket number in brackets derived from git branch name (e.g. [CIT-1234])"
        },
        {
            "text": "Prefix with service name in brackets derived from modified files (e.g. [service-name])"
        }
    ],
    "github.copilot.nextEditSuggestions.enabled": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.showWhatsNewAfterUpgrades": false,
    "gitlens.plusFeatures.enabled": false,
    "go.toolsManagement.autoUpdate": true,
    "markdown.extension.list.indentationSize": "inherit",
    "markdownlint.config": {
        "blanks-around-lists": false,
        "code-block-style": false,
        "line-length": false,
        "no-bare-urls": false,
        "no-hard-tabs": false,
        "ul-indent": false,
        "ul-style": false
    },
    "redhat.telemetry.enabled": false,
    "security.promptForLocalFileProtocolHandling": false,
    "shellcheck.disableVersionCheck": true,
    "window.commandCenter": true,
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.wrapTabs": true,
    "[log]": {
        "editor.wordWrap": "on"
    },
    "[markdown]": {
        "editor.wordWrap": "on"
    },
    "[plaintext]": {
        "editor.wordWrap": "on"
    }
}