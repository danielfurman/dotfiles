[alias]
	glog = log --graph --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --date=relative
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
	sdiff = !git diff && git submodule foreach 'git diff'
	spush = push --recurse-submodules=on-demand
	supdate = submodule update --remote --rebase
	tagf = tag --format='%(color:blue)%(refname:short) %(color:reset)%(taggername) %(color:green)%(taggerdate:short) (%(taggerdate:relative)) - %(color:red)%(subject)' --sort=taggerdate
[branch]
	autoSetupRebase = always
# Colors for https://github.com/so-fancy/diff-so-fancy - make highlights less eye-straining
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red 52
	newNormal = green
	newHighlight = green 22
[core]
	autocrlf = input
	pager = diff-so-fancy | less -FXi --tabs=4
[credential]
	helper = cache
[interactive]
	diffFilter = diff-so-fancy --patch
[merge]
	tool = meld
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[user]
	email = danielfurman8@gmail.com
	name = Daniel Furman
[include]
	path = config_local
