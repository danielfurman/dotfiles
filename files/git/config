[alias]
	glog = log --graph --pretty=format:'%C(auto)%h%Creset %C(auto)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --date=relative
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
	sdiff = !git diff && git submodule foreach 'git diff'
	spush = push --recurse-submodules=on-demand
	supdate = submodule update --remote --rebase
[branch]
	autoSetupRebase = always
[credential]
	helper = cache
[include]
	path = ~/.config/git/config_local
[merge]
	tool = meld
[url "ssh://git@github.com"]
	insteadOf = https://github.com
[url "ssh://git@cl-gitlab.intra.codilime.com"]
	insteadOf = https://cl-gitlab.intra.codilime.com
[url "ssh://git@gitlab.eng.vmware.com"]
	insteadOf = https://gitlab.eng.vmware.com
