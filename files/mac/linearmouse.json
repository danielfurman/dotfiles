{
  "schemes" : [
    {
      "if" : {
        "device" : {
          "category" : "mouse"
        }
      },
      "scrolling" : {
        "acceleration" : 1,
        "distance" : 3,
        "speed" : 0
      },
      "pointer" : {
        "disableAcceleration" : true
      }
    },
    {
      "if" : {
        "app" : "org.mozilla.firefox",
        "device" : {
          "category" : "mouse"
        }
      },
      "scrolling" : {
        "distance" : {
          "vertical" : 5
        }
      }
    },
    {
      "if" : {
        "app" : "com.microsoft.VSCode",
        "device" : {
          "category" : "mouse"
        }
      },
      "scrolling" : {
        "distance" : {
          "vertical" : 1
        }
      }
    },
    {
      "if" : {
        "app" : "com.apple.Preview",
        "device" : {
          "category" : "mouse"
        }
      },
      "scrolling" : {
        "acceleration" : {
          "vertical" : 1
        },
        "distance" : {
          "vertical" : "auto"
        },
        "speed" : {
          "vertical" : 30
        }
      }
    }
  ],
  "$schema" : "https:\/\/schema.linearmouse.app\/0.10.0"
}